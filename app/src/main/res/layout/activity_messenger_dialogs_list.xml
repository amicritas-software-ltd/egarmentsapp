<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.MessengerDialogsListActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2B6885"
        app:cardCornerRadius="10dp">
        <ImageView
            android:id="@+id/imgBackArrow"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:srcCompat="@drawable/ic_keyboard_arrow_left"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-garments"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="18dp">
                <ImageView
                    android:id="@+id/ivMessage"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:srcCompat="@drawable/message_white"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="10dp">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:srcCompat="@drawable/notification_white"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tvMainMenu"
                android:layout_width="25dp"
                android:gravity="center"
                android:layout_height="25dp"
                android:text="@string/_8942"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/white"/>

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>  <!--custom toolbar layout-->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/searchLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp">
                <androidx.appcompat.widget.SearchView
                    android:id="@+id/acSearch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Search"
                    android:outlineSpotShadowColor="@color/colorPrimary"
                    android:imeOptions="actionGo"
                    android:background="@color/colorTransparent"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
    <com.stfalcon.chatkit.dialogs.DialogsList
        android:id="@+id/dialogsList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>