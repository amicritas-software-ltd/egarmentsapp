<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="5">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        app:cardCornerRadius="10dp">
                        <ImageView
                            android:id="@+id/ivProductImg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/img_zipper2"
                            android:scaleType="fitXY"
                            android:padding="5dp"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="bottom"
                            android:layout_marginBottom="10dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="15dp"
                                    android:paddingRight="15dp"
                                    android:gravity="clip_horizontal"
                                    android:background="@drawable/price_background">

                                    <TextView
                                        android:id="@+id/tvProductPrice"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="10à§³"
                                        android:textColor="@color/white"
                                        android:textStyle="bold"
                                        android:textSize="18sp"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginStart="5dp"
                    android:gravity="center_vertical">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="25dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="end"
                            android:layout_marginRight="5dp">
                            <ImageView
                                android:id="@+id/ivAddFavorite"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                app:srcCompat="@drawable/ic_favorite_red"
                                android:layout_marginEnd="5dp"/>
                            <ImageView
                                android:id="@+id/ivAddFlag"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                app:srcCompat="@drawable/ic_flag_black"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="bottom">

                                <TextView
                                    android:id="@+id/tvProductCategory"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="Accessories"
                                    android:layout_marginStart="5dp"
                                    android:gravity="bottom"/>
                            </LinearLayout>

                        </LinearLayout>
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/tvProductTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Zipper"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="5dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Posted by "
                            android:drawableLeft="@drawable/ic_person"/>
                        <TextView
                            android:id="@+id/tvPostAuthorName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jon. Smith"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tvPostAuthorLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dhaka/Bangladesh"
                        android:drawableLeft="@drawable/ic_location_on"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp">
                        <RatingBar
                            android:id="@+id/rbPosTRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:saveEnabled="true"
                            android:numStars="1"
                            style = "?android:attr/ratingBarStyleSmall"
                            android:rating="1"/>
                        <TextView
                            android:id="@+id/tvRatingPoint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.74"/>
                        <TextView
                            android:id="@+id/tvRatingCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(52)"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end">
                            <TextView
                                android:id="@+id/tvPostTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1 Day ago"
                                android:textSize="14sp"
                                android:layout_marginRight="10dp"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

</LinearLayout>