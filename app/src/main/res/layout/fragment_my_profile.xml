<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.MyProfileFragment"
    android:background="#F6F6F6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="ExtraText">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.scwang.wave.MultiWaveHeader
                    android:id="@+id/waveHeader"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    app:mwhStartColor="@color/colorWaveStart"
                    app:mwhCloseColor="@color/colorWaveClose"
                    app:mwhWaves="MultiWave">

                </com.scwang.wave.MultiWaveHeader>
            </LinearLayout>  <!--wave layout-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:gravity="center"
                android:orientation="vertical">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/person"
                    app:civ_border_color="#fff"
                    app:civ_border_width=".5dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bipul Sarkar"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:layout_marginBottom="50dp"/>
            </LinearLayout>  <!--img & name layout-->

        </RelativeLayout>   // header layout

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@+id/waveHeader"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="-25dp"
            android:layout_marginRight="30dp"
            android:minHeight="200dp"
            app:cardBackgroundColor="@color/colorWhiteTransparent"
            app:cardCornerRadius="9dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal"
                android:weightSum="3"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".8"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Post"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/_30"
                        android:textSize="18sp"
                        tools:ignore="RtlHardcoded" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/verification"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        tools:ignore="RtlHardcoded" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/non_varification_icon"
                        app:civ_border_width=".5dp"
                        app:civ_circle_background_color="#FF0000"
                        tools:ignore="RtlHardcoded" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvMessageTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/round_background_red"
                            android:gravity="center"
                            android:text="@string/_90"
                            android:layout_marginStart="0dp"
                            android:layout_alignEnd="@id/tvMessage"
                            android:textColor="@android:color/white"
                            android:padding="2dp"/>

                        <TextView
                            android:id="@+id/tvMessage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Message"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/ic_message_black" />


                </LinearLayout>


            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>  // post, verification, contact CARD

        <LinearLayout
            android:id="@+id/mainLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/waveHeader"
            android:layout_marginTop="10dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@color/cardBg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@drawable/ic_company_icon"
                    tools:ignore="RtlHardcoded" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xyz garments Ltd."
                    android:textSize="20dp" />

            </LinearLayout>  // garments name layout

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:background="@color/cardBg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@drawable/designation_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CEO xyz garments company ltd."
                    android:textSize="20dp" />

            </LinearLayout>  // designation of user layout

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:background="@color/cardBg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@drawable/ic_phone_android_black_24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+88017233434344"
                    android:textSize="20dp" />

            </LinearLayout>  // phone number layout

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:background="@color/cardBg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@drawable/email_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="bipul@gmail.com"
                    android:textSize="20dp" />

            </LinearLayout>  // email layout

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:background="@color/cardBg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@drawable/nidd" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="09809898999898"
                    android:textSize="20dp" />

            </LinearLayout>  // id number layout

            <LinearLayout
                android:background="@color/cardBg"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_weight=".5"
                    android:text="Trad License  :"/>


                <com.google.android.material.button.MaterialButton
                    android:layout_weight=".5"
                    android:layout_width="60dp"
                    android:gravity="center"
                    android:layout_height="40dp"
                    app:cornerRadius="20dp"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="@string/uploaded"
                    tools:ignore="UnusedAttribute" />

            </LinearLayout>  // licence upload layout

            <LinearLayout
                android:background="@color/cardBg"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_weight=".5"
                    android:text="Payment         :"/>


                <com.google.android.material.button.MaterialButton
                    android:layout_weight=".5"
                    android:layout_width="60dp"
                    android:gravity="center"
                    android:layout_height="40dp"
                    app:cornerRadius="20dp"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/greenColor"
                    android:text="paid"/>



            </LinearLayout>  // payment layout



        </LinearLayout>  // profile info layout

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogin"
            android:layout_below="@+id/mainLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:backgroundTint="@color/colorPrimary"
            android:text="Update profile"
            android:textAllCaps="false"
            app:cornerRadius="25dp"
            android:layout_marginBottom="40dp"/>  // update profile button


    </LinearLayout>

</ScrollView>